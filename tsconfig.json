{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "commonjs",
    "target": "es2021",
    "lib": ["es2021"],

    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "typeRoots": ["./src/types", "./node_modules/@types"]
  },

  "include": ["src","src/**/*", "src/types/**/*", "types.d.ts"]
}
